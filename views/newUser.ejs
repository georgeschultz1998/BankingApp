<% var content = `
<div class="container">
  <h1 class="heading-primary">Create New User</h1>
  <div class="card-container">
    <div class="card">
      <div class="card__header">
        <h3 class="heading-tertiary">New User Information</h3>
      </div>
      <div class="card__details">
        <p class="card__text">Please enter the following details:</p>
        <div class="card__data">
          <form action="/api/v1/users/signup" method="post">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" required><br><br>
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required><br><br>
            <label for="role">Role:</label>
            <select id="role" name="role" required>
              <option value="user">User</option>
              <option value="staff">Staff</option>
              <option value="admin">Admin</option>
            </select><br><br>
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required><br><br>
            <label for="cpassword">Confirm Password:</label>
            <input type="password" id="cpassword" name="cpassword" required><br><br>
            <input class="card__sub-heading" type="submit" value="Submit">
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
` %>

<%- include('layout.ejs', { title: 'Create New User', body: content }) %>
